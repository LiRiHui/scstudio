  background-size: 100% 100%;
  height: 330rpx;
  width: 100%;
}

.title_bg{
  background-position: left bottom;
  height: 90rpx;
  width: 100%;
  background: url("http://puppypet-1254063725.cossh.myqcloud.com/title.png") no-repeat;
  background-size: 100% 100%;
  opacity: 0.7;
  display: inline-block;
  margin-top: 245rpx;
}

.title_bg image{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-top: 15rpx;
  margin-left: 25rpx;
}

.title{
  color: #815155;
  font-size: 35rpx;
  vertical-align: -28%;
  margin-left: 15rpx;
  display: inline-block;
}

.tab-content{
  min-height: 670rpx;
